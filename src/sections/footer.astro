---
import FooterGallery from "@/components/footer-gallery.astro";
---

<FooterGallery/>
<section class="bg-primary" id="social">
  <div class="flex flex-col lg:flex-row pt-6 px-8 gap-8 md:pt-12 md:px-16">
    <div
      class="w-full flex-1 flex flex-col gap-2 items-center text-center md:items-start md:text-left"
    >
      <h3>Subscribe to our Newsletter</h3>
      <p>
        By subscribing to our newsletter, you will receive the latest tips, and
        promotions about our product and services straight to your inbox.
      </p>
      <form class="my-3 bg-white w-full flex h-fit">
        <input
          class="bg-transparent px-3 py-1 w-full focus-visible:outline-0 text-black"
          placeholder="Enter your email address"
          type="email"
        />
        <button
          class="bg-black text-white font-bold cursor-pointer px-8 py-2 hover:bg-accent hover:text-black transition-colors duration-200 ease-in-out"
          type="submit">Send</button
        >
      </form>
    </div>
    <div class="flex flex-col sm:flex-row gap-8 w-full lg:w-2/3">
      <div
        class="w-full flex flex-col gap-2 items-center text-center lg:items-start lg:text-left"
      >
        <h3>contact us</h3>
        <ul>
          <li class="flex items-center gap-2">
            <svg fill="none" height="16" width="16">
              <use xlink:href="/sprite.svg#phone-icon"></use>
            </svg>jo@josburgers.com
          </li>
          <li class="flex items-center gap-2">
            <svg fill="none" height="16" width="16">
              <use xlink:href="/sprite.svg#email-icon"></use>
            </svg>+123-456-7890
          </li>
          <li class="flex items-center gap-2">
            <svg fill="none" height="16" width="16">
              <use xlink:href="/sprite.svg#location-icon"></use>
            </svg>123 Anywhere St., Any City, ST 12345
          </li>
        </ul>
      </div>
      <div
        class="w-full uppercase flex flex-col gap-2 items-center text-center lg:items-start lg:text-left"
      >
        <h3>Useful Links</h3>
        <nav class="flex lg:flex-col lg:gap-1 gap-4">
          <a
            class="font-semibold hover:text-accent w-fit transition-colors duration-200 ease-in-out"
            href="#about">about</a
          >
          <a
            class="font-semibold hover:text-accent w-fit transition-colors duration-200 ease-in-out"
            href="#menu">menu</a
          >
          <a
            class="font-semibold hover:text-accent w-fit transition-colors duration-200 ease-in-out"
            href="#reviews">reviews</a
          >
          <a
            class="font-semibold hover:text-accent w-fit transition-colors duration-200 ease-in-out"
            href="#social">social</a
          >
        </nav>
      </div>
    </div>
  </div>
  <div class="mt-8 lg:mt-12 flex flex-col gap-2 items-center justify-center">
    <div class="flex gap-3">
      <a
        class="hover:text-accent transition-colors duration-200 ease-in-out"
        href="/">Privacy</a
      >
      <a
        class="hover:text-accent transition-colors duration-200 ease-in-out"
        href="/">Terms</a
      >
      <a
        class="hover:text-accent transition-colors duration-200 ease-in-out"
        href="/">Accessibility</a
      >
    </div>
    <p class="text-center text-xs/relaxed">
      Â© Company 2022. All rights reserved.
      <br />
      Created with
      <a class="underline transition hover:text-accent text-white" href="#"
        >Love</a
      >
    </p>
  </div>
</section>

<style>
  .follow {
    font-size: clamp(1rem, 4vw, 2.75rem);
    font-weight: 600;
  }
</style>
